// 既定の設定とユーザー設定を上書きするには、このファイル内に設定を挿入します
{
	"files.exclude": {
		"node_modules": true,
		"client": true,
		"server/public": true,
		"**/*.js.map": {"when": "$(basename)"},
		"**/*.js": { "when": "$(basename).ts" }
	},
	"tslint.configFile": "./tslint.json",
	"typescript.tsdk": "node_modules\\typescript\\lib"
}